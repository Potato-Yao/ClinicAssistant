<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="450" prefWidth="600" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.potato.desktop.controller.HTMLContentFrameController">

    <center>
        <WebView fx:id="webView"/>
    </center>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="%app.title.about">
                    <items>
                        <MenuItem mnemonicParsing="false" text="%app.title.help" fx:id="helpMenuItem" onAction="#onHelpMenuItemClick"/>
                        <MenuItem mnemonicParsing="false" text="%app.title.about" fx:id="aboutMenuItem" onAction="#onAboutMenuItemClick"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

</BorderPane>
